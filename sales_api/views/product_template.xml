<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_form" model="ir.ui.view">
            <field name="name">view.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="product_brand_ept_id" placeholder="Brand"/>

                    <field name="short_desc"/>
                    <field name="is_deactivate"></field>
					<field name="min_limit"/>
                    <field name="max_limit"></field>
                    
                </xpath>
                <field name="uom_id" position="after">
                    <field name="category_id" invisable='1'/>
                    <field name="uom_allowed_ids" domain="[('category_id', '=', category_id)]"/>
                </field>
            </field>
        </record>
       

        <record id="view_product_product_form" model="ir.ui.view">
            <field name="name">view.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="product_brand_ept_id" placeholder="Brand"/>

                    <field name="short_desc"/>
                    <field name="is_deactivate"></field>
					<field name="min_limit"/>
                    <field name="max_limit"></field>
                    
                </xpath>
                <field name="uom_id" position="after">
                    <field name="category_id" invisable='1'/>
                    <field name="uom_allowed_ids" widget="many2many_tags" domain="[('category_id', '=', category_id)]"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
